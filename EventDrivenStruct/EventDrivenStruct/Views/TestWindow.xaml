<Window x:Class="EventDrivenStruct.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:EventDrivenStruct.Views"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid >
        <StackPanel Orientation="Horizontal" CanHorizontallyScroll="False" CanVerticallyScroll="False">
            <TextBlock Width="50" 
                       Margin="0,0,5,0"
                       Text="AppName" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="10" 
                       FontWeight="Light"/>
            <Border Width="1" BorderThickness="2" Height="15" BorderBrush="Black"/>
            <StackPanel.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="关闭该应用" Command="{Binding CloseThisAppCommand}"/>
                </ContextMenu>
            </StackPanel.ContextMenu>
        </StackPanel>
        
    </Grid>
</Window>
